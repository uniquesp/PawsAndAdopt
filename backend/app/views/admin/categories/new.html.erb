<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Add Category</h5>
      </div>
      
      <div class="card-body">
        <%= form_with model: @category, url: admin_categories_path, method: :post, local: true, class: "needs-validation" do |f| %>
          
          <!-- Category Name Field -->
          <div class="mb-3">
            <%= f.label :category_name, "Category Name", class: "form-label" %>
            <%= f.text_field :category_name, class: "form-control", placeholder: "Enter category name", required: true,
              pattern: "[a-zA-Z\s]+", title: "Only letters and spaces are allowed." %>
          </div>
          
          <!-- Buttons -->
          <div class="d-flex justify-content-between">
            <%= link_to "Cancel", admin_categories_path, class: "btn btn-outline-secondary" %>
            <%= f.submit "Add Category", class: "btn text-white", style: "background-color: rgb(105, 108, 255);" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
