<body class="d-flex justify-content-center align-items-center vh-100" style="background-color: #f8f9fa;">
    <div class="container-fluid d-flex justify-content-center align-items-center vh-100">
        <div class="d-flex justify-content-center">
            <div class="card p-4 border-0 shadow" style="width: 400px; border-radius: 12px; background-color: white;">
                <h3 class="text-center fw-bold">Sign In</h3>
                <p class="text-center text-muted">Welcome back! Admin</p>
                <hr>
                
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
                    <div class="mb-3">
                        <%= f.label :email, class: "form-label" %>
                        <div class="input-group">
                            <span class="input-group-text">@</span>
                            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Your Email" %>
                        </div>
                    </div>
                    <div class="mb-3">
                        <%= f.label :password, class: "form-label" %>
                        <div class="input-group">
                            <span class="input-group-text">
                                <img src="https://img.icons8.com/ios-filled/16/000000/lock-2.png"/>
                            </span>
                            <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Your Password" %>
                        </div>
                    </div>
                    <% if devise_mapping.rememberable? %>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <%= f.check_box :remember_me, class: "form-check-input" %>
                                <%= f.label :remember_me, class: "form-check-label" %>
                            </div>
                            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-decoration-none" %>
                        </div>
                    <% end %>
                    <div class="d-grid">
                    <%= f.submit "Log in", style: "background-color: rgb(105, 108, 255); color: white ;", class: "btn w-100" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</body>