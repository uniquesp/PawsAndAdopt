<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Add Breed</h5>
      </div>
      
      <div class="card-body">
        <%= form_with model: @breed, url: admin_breeds_path, method: :post, local: true, class: "needs-validation" do |f| %>
          
          <!-- Breed Name Field -->
          <div class="mb-3">
            <%= f.label :breed_name, "Breed Name", class: "form-label" %>
            <%= f.text_field :breed_name, id: "breed_breed_name", class: "form-control", placeholder: "Enter breed name", required: true, 
              pattern: "[a-zA-Z\s]+", title: "Only letters and spaces are allowed." %>
          </div>

          <!-- Category Dropdown -->
          <div class="mb-3">
            <%= f.label :category_id, "Category", class: "form-label" %>
            <%= f.collection_select :category_id, @categories, :id, :category_name, 
              { prompt: "Select Category" }, 
              { class: "form-select", id: "breed_category_id", required: true } %>
          </div>
          
          <!-- Buttons -->
          <div class="d-flex justify-content-between">
            <%= link_to "Cancel", admin_breeds_path, class: "btn btn-outline-secondary" %>
            <%= f.submit "Add Breed", class: "btn text-white", style: "background-color: rgb(105, 108, 255);" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
